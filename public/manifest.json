{
	"manifest_version": 3,
	"name": "NO+OTP",
	"description": "Add to the input your password + OTP",
	"version": "3.1",
	"action": {},
	"options_ui": {
		"page": "options.html",
    "browser_style": false,
    "open_in_tab": true
	},
	"browser_specific_settings": {
		"gecko": {
			"strict_min_version": "51.0",
			"id": "{331d643d-ad4b-414f-b884-90c1cf38ccab}"
		}
	},
	"icons": {
		"48": "images/unlock-50.png",
		"128": "images/unlock-128.png"
	},
	"browser_action": {
		"default_title": "NO+OTP"
	},
	"background": {
		"service_worker": "js/index.js",
		"type": "module"
	},
	"permissions": ["storage", "activeTab", "clipboardWrite", "offscreen", "scripting"]
}
